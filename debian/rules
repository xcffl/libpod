#!/usr/bin/make -f

DH_VERBOSE=1
DH_GOPKG=github.com/containers/libpod
BUILDDIR := $(shell pwd)
DESTDIR := $(BUILDDIR)/debian/podman
PREFIX := $(DESTDIR)/usr
ETCDIR := $(DESTDIR)/etc
BINDIR := $(PREFIX)/bin
MANDIR := $(PREFIX)/share/man
SYSTEMDDIR := $(PREFIX)/lib/systemd/system
BUILDTAGS := "seccomp systemd containers_image_ostree_stub"
BUILD_INFO=$(shell date +%s)
LDFLAGS="-X main.gitCommit=$(GIT_COMMIT) -X main.buildInfo=$(BUILD_INFO)"
GO := /usr/bin/go
UPSTREAM_TAG=v1.4.3

%:
	dh_clean
	make clean
	rm -rf $(BUILDDIR)/src
	dh $@ --buildsystem=golang --with=golang --builddirectory=$(BUILDDIR)

override_dh_auto_configure:
	dh_auto_configure -O--buildsystem=golang
	# Include vendored dependencies.
	cp -rp $(BUILDDIR)/vendor $(BUILDDIR)/src
	mkdir -p $(BUILDDIR)/src/github.com/containers
	ln -s $(BUILDDIR) $(BUILDDIR)/src/$(DH_GOPKG)
	sed -i '/bin\/podman-remote/d' Makefile
	sed -i 's/\.gopathok//g' Makefile

override_dh_auto_build:
	GOPATH=$(BUILDDIR) $(GO) generate ./cmd/podman/varlink/...
	GOPATH=$(BUILDDIR) make GO=$(GO) BUILDTAGS=$(BUILDTAGS) LDFLAGS=$(LDFLAGS) podman docs docker-docs
	rm -rf $(BUILDDIR)/obj-*-linux-gnu

override_dh_auto_test:

override_dh_auto_install:
	install PREFIX=$(PREFIX) -dp $(SYSTEMDDIR)
	GOPATH=$(BUILDDIR) make GO=$(GO) BUILDTAGS=$(BUILDTAGS) PREFIX=$(PREFIX) ETCDIR=$(ETCDIR) BINDIR=$(BINDIR) MANDIR=$(MANDIR) \
	   install.bin \
	   install.cni \
	   install.completions \
	   install.config \
	   install.man \
	   install.systemd

override_dh_golang:

